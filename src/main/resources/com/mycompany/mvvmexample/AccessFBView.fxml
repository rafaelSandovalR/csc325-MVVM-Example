<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="467.0" prefWidth="496.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="modelview.AccessFBView">
   <children>
      <VBox alignment="CENTER_RIGHT" layoutX="7.0" prefHeight="190.0" prefWidth="485.0" spacing="10.0">
         <children>
            <TextField fx:id="nameField" alignment="TOP_LEFT" promptText="Name" />
            <TextField fx:id="majorField" promptText="Major" />
            <TextField fx:id="ageField" promptText="Age" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="writeButton" alignment="CENTER" mnemonicParsing="false" onAction="#addRecord" text="Write" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets left="10.0" right="20.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="readButton" alignment="CENTER" mnemonicParsing="false" onAction="#writeRecord" text="Read" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets left="10.0" right="20.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#regRecord" text="Register">
                     <HBox.margin>
                        <Insets left="10.0" right="20.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="switchScene" mnemonicParsing="false" onAction="#switchScene" text="Switch to Web">
                     <HBox.margin>
                        <Insets left="100.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <TextArea fx:id="outputField" layoutX="6.0" layoutY="196.0" prefHeight="265.0" prefWidth="485.0" />
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</AnchorPane>
